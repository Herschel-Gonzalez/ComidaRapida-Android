<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Reporte de pedidos"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />



            <Button
                android:id="@+id/fechaDeInicioReportePedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Fecha de inicio"/>


            <Button

                android:id="@+id/fechaFinReportePedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Fecha fin"/>

            <Button
                android:id="@+id/botonBuscarPedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Buscar"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerReporteDePedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sinPedidosReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>