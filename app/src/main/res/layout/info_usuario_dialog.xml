<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">



        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>


        <TextView
            android:id="@+id/nombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textColor="@color/black">

        </TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/correoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textColor="@color/black">

        </TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tipoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textColor="@color/black">

        </TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle"
            android:textStyle="bold"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/calleUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle"
            android:textColor="@color/black">



        </TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de casa"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/numeroDeCasaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero de casa"
            android:textColor="@color/black">



        </TextView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colonia"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/coloniaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="colonia"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </Space>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referencias"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/referenciasUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Referencias"
            android:textColor="@color/black">



        </TextView>



        <Button
            android:id="@+id/botonOKUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="OK"
            android:layout_marginTop="10dp"/>



    </LinearLayout>

</RelativeLayout>